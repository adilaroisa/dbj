@startuml
title Alur Pengolahan & Validasi Data Jurnal DIY 

start
:Admin Masuk ke Sistem;

if (Metode Pengumpulan Data?) then (Import Excel)
  :Upload file Excel;
  :Sistem ekstrak Nama, Univ, Email, WA, Member RJI;
else (Manual Input / New Discovery)
  :Admin cari jurnal baru di web Kampus DIY;
  :Input Nama Jurnal & Universitas;
  :Input Data Internal (Email & WA Pengelola);
endif

partition "Validasi & Sinkronisasi Sinta" {
  if (ISSN sudah ada?) then (Tidak)
    :Sistem/Admin cari Nama Jurnal di sinta.kemdiktisaintek.go.id;
    :Temukan 8 digit ISSN (tanpa strip);
    :Input/Simpan ISSN ke Sistem;
  endif

  :Sistem Sync Data via ISSN;
  :Ambil Skor Sinta (S1-S6), Sinta ID, & Garuda ID;
  if (Data Ditemukan?) then (Ya)
    :Update Label "Sinta X";
  else (Tidak)
    :Label "Belum Terakreditasi";
  endif
}

partition "Finalisasi Data (Tampilan Publik)" {
  :Generate Link Dinamis portal.issn.org;
  :Generate Link Profil Sinta & Garuda;
  :Admin Verifikasi Akhir;
  :Simpan Permanen ke Database MySQL;
}

:Data tampil di Tabel Jurnal DIY;
stop
@enduml